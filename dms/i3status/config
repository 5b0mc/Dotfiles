general {
        output_format = "i3bar"
        colors = false
        interval = 10
}

order += "disk /"
order += "memory"
order += "tztime week"
order += "tztime local"

tztime local {
		format = "%time"
		format_time = "%a %-d %b %H:%M"
}

tztime week {
		format = "%time"
		format_time = "W:%W"
}

disk "/" {
    format = "%avail"
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}
