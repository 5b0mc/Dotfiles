        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "network": {
        "format-wifi": "Ôá´ ",
        "format-ethernet": "üñß",
        "tooltip-format": "{essid} ({signalStrength}%) via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected",
        "format-alt": "{ifname} {ipaddr}/{cidr}"
    },
    "wireplumber": {
        "format": "{volume}% {icon}",
