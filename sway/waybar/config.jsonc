// -*- m ode: jsonc -*-
{
    "height": 28,
    "spacing": 2,
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad"
    ],
    "modules-right": [
        "wireplumber",
        "bluetooth",
        "network",
        "power-profiles-daemon",
        "battery",
        "custom/power",
        // "custom/pomodoro",
        "tray",
        "clock"
    ],
    "mpris": {
        "format": "{player_icon}",
        "format-paused": "{status_icon}",
        "player-icons": {
            "default": "‚è∏" 
        },
        "status-icons": {
            "paused": "‚ñ∂"
        }
    },
    "sway/mode": {
        "format": "{}"
    },
    "custom/pomodoro": {
        "format": "{}",
        "return-type": "json",
        "exec": "/home/m/.cargo/bin/waybar-module-pomodoro",
        "on-click": "/home/m/.cargo/bin/waybar-module-pomodoro toggle",
        "on-click-right": "/home/m/.cargo/bin/waybar-module-pomodoro reset"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "bluetooth": {
        "format": "Ôäî",
        "format-disabled": "Û∞Ç≤",
        "format-connected": "Û∞Ç∞",
        "tooltip-format": "{controller_alias}\t{controller_address}",
        "tooltip-format-connected": "{device_alias} (battery {device_battery_percentage}%)",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click": "blueberry"
    },
    "tray": { },
    "clock": {
        "on-click" : "/home/m/Projects/deca/build/deca",
        "format": "{:%Y-%m-%d %A %H:%M}",
        "locale": "it_IT.UTF-8",
        "tooltip": false
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon} ",
        "format-charging": "Ôóß",
       	"interval": 1,
        "format-plugged": "Ôá¶",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "power-profiles-daemon": {
