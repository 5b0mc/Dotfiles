### style
###########  
font pango:Ubuntu Nerd Font, bold 10
gaps inner 2
gaps outer 2
smart_gaps on
default_border pixel 0
#2E3440  nord0    black
#3B4252  nord1    dark_gray
#434C5E  nord2    gray
#4C566A  nord3    light_gray
#D8DEE9  nord4    darkest_white
#E5E9F0  nord5    darker_white
#ECEFF4  nord6    white
#8FBCBB  nord7    teal
#88C0D0  nord8    off_blue
#81A1C1  nord9    glacier
#5E81AC  nord10   blue
#BF616A  nord11   red
#D08770  nord12   orange
#EBCB8B  nord13   yellow
#A3BE8C  nord14   green
#B48EAD  nord15   purple
set $black                #2E3440
set $dark_gray            #3B4252
set $gray                 #434C5E
set $light_gray           #4C566A
set $darkest_white        #D8DEE9
set $darker_white         #E5E9F0
set $white                #ECEFF4
set $teal                 #8FBCBB
set $off_blue             #88C0D0
set $glacier              #81A1C1
set $blue                 #5E81AC 
set $red                  #BF616A
set $orange               #D08770
set $yellow               #EBCB8B
set $green                #A3BE8C
set $purple               #B48EAD
#light_graycolor_class    border          backgrount      text            indicator       child_border
client.focused            $darkest_white  $darkest_white  $black          $darkest_white  $darkest_white
client.focused_tab_title  $black          $darkest_white  $black                          
client.focused_inactive   $black          $black          $darkest_white  $darkest_white  $black
client.unfocused          $black          $black          $darkest_white  $darkest_white  $darkest_white
client.urgent             $darkest_white  $darkest_white  $black          $darkest_white  $darkest_white
client.placeholder        $black          $black          $darkest_white  $darkest_white  $darkest_white
client.background         $black                                                          
